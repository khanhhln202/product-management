extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)

    h1(class="mb-4") Accounts list

    .card.mb-3 
        .card-header List of accounts
            .row 
                .col-8 
                .col-4.text-right
                    a(
                        href=`${prefixAdmin}/accounts/create`
                        class="btn btn-outline-success"
                    ) + Create new account

            table(
                class="table table-hover table-sm"
            )
                thead
                    tr
                        th NO
                        th Avatar
                        th Full Name
                        th Roles
                        th Email
                        th Status
                        th Actions

                tbody
                    if(accounts.length > 0)
                        each account, index in accounts
                            tr
                                td #{index + 1}
                                td
                                    img(src=account.avatar width="100px" height="auto")
                                td #{account.fullName}
                                td #{account.role.title}
                                td #{account.email}
                                td 
                                    if(account.status === "active")
                                        a(
                                            href="javascript:;"
                                            class="badge badge-success"
                                            data-status="active"
                                        ) Active
                                    else
                                        a(
                                            href="javascript:;"
                                            class="badge badge-danger"
                                        ) Inactive
                                
                                td
                                    a(
                                        class="btn btn-info btn-sm"
                                        href=`${prefixAdmin}/accounts/detail/${account.id}`
                                        ) Detail
                                    a(
                                        class="btn btn-warning btn-sm ml-1"
                                        href=`${prefixAdmin}/accounts/edit/${account.id}`
                                        ) Edit
                                    button(
                                        class="btn btn-danger btn-sm ml-1" 
                                        button-delete
                                        data-id=account.id
                                    ) Delete