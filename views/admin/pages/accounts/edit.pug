extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)

    h1(class="mb-4") Edit Account

    if(roles)
        form(
            action=`${prefixAdmin}/accounts/edit/${account.id}?_method=PATCH`
            method="POST"
            enctype="multipart/form-data" 
        )
            div(class="form-group")
                label(for="fullName") Full name *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    required
                    value=account.fullName
                )

            div(class="form-group")
                label(for="email") Email *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                    value=account.email
                )

            div(class="form-group")
                label(for="password") Password 
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                )

            div(class="form-group")
                label(for="passwordConfirm") Confirm Password 
                input(
                    type="password"
                    class="form-control"
                    id="passwordConfirm"
                    name="passwordConfirm"
                )

            div(class="form-group")
                label(for="phone") Phone
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value=account.phone
                )

            div(
                class="form-group"
                upload-image
                )
                label(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(src=account.avatar class="image-preview" upload-image-preview, alt="Avatar")

            div(class="form-group")
                label(for="role_id") Role
                select(
                    name="role_id"
                    id="role_id"
                    class="form-control"
                )
                    option(disabled) -- Role --
                    each role in roles
                        option(
                            value=role.id
                            selected= (role.id == account.role_id ? true : false)
                        ) #{role.title}
                        

            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(account.status === "active" ? true : false)
                )
                label(for="statusActive" class="form-check-label") Active

            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInactive"
                    name="status"
                    value="inactive"
                    checked=(account.status === "inactive" ? true : false)
                )
                label(for="statusInactive" class="form-check-label") Inactive
            

            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Update

    else    
        p Please create roles first to create an account
        a(href=`${prefixAdmin}/roles/create` class="btn btn-secondary") Create roles
