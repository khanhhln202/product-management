extends ../../layouts/default.pug
include ../../mixins/table-tree.pug

block main 

    h1 Products catalog

    .card.mb-3 
        .card-header Products Catagories List
            .card-body
                .row
                    .col-8
                    .col-4.text-right
                        a(
                            href=`${prefixAdmin}/product-categories/create`
                            class="btn btn-outline-success"
                        ) + Create new product

                table(
                    class="table table-hover table-sm"
                    checkbox-multi
                )
                    thead 
                        tr 
                            th 
                                input(type="checkbox" name="checkall")
                            th NO 
                            th Images 
                            th Title 
                            th Position
                            th Status 
                            th Action 

                    tbody 
                        +table-tree(productCategories)
                        