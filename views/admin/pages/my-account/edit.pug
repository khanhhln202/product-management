extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h1(class="mb-4") Update personal information

    +alert-success(5000)
    +alert-error(5000)

    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data" 
    )
        div(class="form-group")
            label(for="name") Full Name *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                value=user.fullName
                required
            )

        div(class="form-group")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                value=user.email
                required
            )

        div(class="form-group")
            label(for="password") Password
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )

        div(class="form-group")
            label(for="password") Confirm Password
            input(
                type="password"
                class="form-control"
                id="confirmPassword"
                name="confirmPassword"
            )

        div(class="form-group")
            label(for="phone") Phone number
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=user.phone
            )

        div(
            class="form-group"
            upload-image
            )
            label(for="avatar") Avatar
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(src=user.avatar class="image-preview" upload-image-preview, alt="Avatar")

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Update information