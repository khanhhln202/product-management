extends ../../layouts/default.pug
include ../../mixins/filter-status.pug

block main 
    h1 Products list 

    .card.mb-3 
        .card-header Filter and search
        .card-body
            .row 
                // Filters
                .col-6 
                    +filter-status(filterStatus)
                // Form Search
                .col-6 
                    form(id="form-search")
                        .input-group 
                            input(
                                type="text"
                                placeholder="Input key"
                                name="keyword"
                                class="form-control"
                                value=keyword
                            )
                            .input-group-append 
                                button(
                                    class="btn btn-success"
                                    type="submit"
                                ) Search

    .card.mb-3 
        .card-header Products List
            .card-body
                table.table.table-hover.table-sm 
                    thead 
                        tr 
                            th NO 
                            th Images 
                            th Title 
                            th Price 
                            th Status 
                            th Action 

                    tbody 
                        each item, index in dummyProducts
                            tr 
                                td #{index+1}
                                td 
                                    img(
                                        src=item.thumbnail
                                        alt=item.title
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.title}
                                td #{item.price}$
                                td 
                                    if(item.status == "active")
                                        a(href="#" class="badge badge-success") Active 
                                    else 
                                        a(href="#" class="badge badge-danger") Inactive
                                td 
                                    button(class="btn btn-warning btn-sm") Edit 
                                    button(class="btn btn-danger btn-sm ml-1") Delete 
