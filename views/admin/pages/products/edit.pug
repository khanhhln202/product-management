extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
    +alert-success(5000)
    +alert-error(5000)

    h1(class="mb-4") Edit the Product

    form(
        action=`${prefixAdmin}/products/edit/${dummyProduct._id}?_method=PATCH`
        id="form-eidt-product"
        method="POST"
        enctype="multipart/form-data" 
    )

        div(class="form-group")
            label(for="title") Title
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value=dummyProduct.title
                required
            )

        div(class="form-group")
            label(for="product_category_id") Category
            select(
                name="product_category_id"
                id="product_category_id"
                class="form-control"
            )
                option(value="") -- Category --
                    if (categories)
                        +select-tree(categories, 1, dummyProduct.product_category_id)

        div(class="form-group")
            label(for="desc") Description
            textarea(
                class="form-control texterea-mce"
                id="desc"
                name="description"
                rows="5"
                value=dummyProduct.description
            ) #{dummyProduct.description}

        div(class="form-group")
            label(for="price") Price
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                required
                value=dummyProduct.price
                min="0"
            )

        div(class="form-group")
            label(for="discount") $ Discount
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discountPercentage"
                value=dummyProduct.discountPercentage
                min="0"
            )

        div(class="form-group")
            label(for="stock") Stock
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value=dummyProduct.stock
                min="0"
            )

        div(
            class="form-group"
            upload-image
        )
            label(for="thumbnail") Thumbnail
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            div(class="image-container")
                img(
                    src=dummyProduct.thumbnail
                    alt=dummyProduct.title
                    upload-image-preview
                    class="image-preview"
                )
                button(
                    type="button"
                    class="close-btn"
                    upload-image-hide
                ) âœ•
            

        div(class="form-group")
            label(for="position") Position
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Auto increase"
                value=dummyProduct.position
                min="1"
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(dummyProduct.status == "active" ? true : false)
            )
            label(for="statusActive" class="form-check-label") Active
        
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
                checked=(dummyProduct.status == "inactive" ? true : false)
            )
            label(for="statusInactive" class="form-check-label") Inactive

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Apply

       


    script(src="/admin/js/product.js")
