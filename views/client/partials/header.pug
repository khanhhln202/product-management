include ../mixins/sub-menu.pug

header.header 
    .container
        .row.align-items-center 
            .col-3 
                .inner-logo 
                    a(href="/")
                        img(src="/images/LumenPathLogo01.png", alt="Logo")

            .col-5 
                form(
                    action="/search"
                    method="GET"
                )            
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            name="keyword"
                            class="form-control"
                            placeholder="Search for products..."
                            value=keyword
                        )
                        button(
                            type="submit" 
                            class="btn btn-primary"
                            ) Search
            
            .col-4 
                .inner-menu 
                    ul 
                        li 
                            a(href="/") Home page
                        li(class="sub-menu")
                            - const pathProduct = "/products"
                            a(href=pathProduct) Products
                            +sub-menu(layoutProductCategories, pathProduct)

                            