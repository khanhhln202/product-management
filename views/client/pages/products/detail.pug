extends ../../layouts/default.pug

block main 
    .container.my-3 
        .row 
            .col-12 
                if (dummyProduct.title)
                    h1(class="mb-4") #{dummyProduct.title}

                if (dummyProduct.price)
                    div(class="mb-4") Price: <b>#{dummyProduct.price}$</b>

                if (dummyProduct.discountPercentage)
                    div(class="mb-4") Discount: <b>#{dummyProduct.discountPercentage}%</b>

                if (dummyProduct.stock)
                    div(class="mb-4") Stock: <b>#{dummyProduct.stock}</b>

                if (dummyProduct.thumbnail)
                    div(class="mb-4") 
                        img(
                            src=dummyProduct.thumbnail
                            alt=dummyProduct.title
                            style="width: 100px;"
                        )

                if (dummyProduct.position)
                    div(class="mb-4") Position: <b>#{dummyProduct.position}</b>

                if (dummyProduct.description)
                    div(class="mb-4") !{dummyProduct.description}