extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug

block main 
    .container.my-3 
        .row 
            .col-12
                +box-head(pageTitle)

        if(dummyProducts.length > 0)
            +product-grid(dummyProducts)
        else
            .row 
                .col-12 
                    .alert.alert-warning.text-center 
                        | No products found for the keyword "#{keyword}". Please try again with a different keyword.